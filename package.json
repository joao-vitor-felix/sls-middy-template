{
  "name": "sls-template",
  "version": "1.0.0",
  "description": "serverless framework template",
  "scripts": {
    "dev": "sls offline --reloadHandler",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch --passWithNoTests",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "test:ui": "vitest --ui --passWithNoTests",
    "lint": "prettier --check src && eslint src --max-warnings=0",
    "lint:fix": "prettier --write src && eslint src --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@middy/core": "^6.0.0",
    "@middy/http-json-body-parser": "^6.0.0",
    "@middy/http-multipart-body-parser": "^6.0.0",
    "@middy/http-response-serializer": "^6.0.0",
    "@middy/http-router": "^6.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/aws-lambda": "^8.10.146",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@vitest/ui": "^2.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "serverless-offline": "^14.4.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
